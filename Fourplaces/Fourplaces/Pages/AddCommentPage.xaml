<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fourplaces.Pages.AddCommentPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
            <Editor Text="{Binding Comment}" Placeholder="Commentaire" AutoSize="TextChanges"/>
            <Button Text="Ajouter un commentaire" Command="{Binding PostCommentCommand}" IsEnabled="{Binding ButtonEnabled}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>